    <script>
        const correctAnswers = {
            q1: 'c',  // I am going (planned future)
            q2: 'b',  // Does he know (present simple question)
            q3: 'c',  // plays (present simple, routine)
            q4: 'a',  // has (present simple, possession)
            q5: 'a',  // have you been waiting (present perfect continuous)
            q6: 'b',  // the (specific reference)
            q7: 'c',  // the (specific reference)
            q8: 'b',  // a (indefinite article)
            q9: 'd',  // he had (past perfect)
            q10: 'd', // was / has been
            q11: 'c', // should have waited (modal perfect)
            q12: 'd', // were (past simple, plural)
            q13: 'c', // is going to (prediction based on evidence)
            q14: 'a'  // will (spontaneous decision)
        };

        function checkAnswers() {
            const form = document.getElementById('testForm');
            const formData = new FormData(form);
            let score = 0;
            let totalQuestions = 14;
            let feedback = [];

            // Check multiple choice questions
            for (let i = 1; i <= 14; i++) {
                const userAnswer = formData.get(`q${i}`);
                const correctAnswer = correctAnswers[`q${i}`];
                
                if (userAnswer === correctAnswer) {
                    score++;
                    feedback.push(`Question ${i}: ✅ Correct`);
                } else {
                    feedback.push(`Question ${i}: ❌ Incorrect (Correct answer: ${correctAnswer})`);
                }
            }

            // Display results
            const percentage = Math.round((score / totalQuestions) * 100);
            document.getElementById('score').innerHTML = `Your Score: ${score}/${totalQuestions} (${percentage}%)`;
            
            let gradeComment = '';
            if (percentage >= 90) gradeComment = '🌟 Excellent!';
            else if (percentage >= 80) gradeComment = '👍 Very Good!';
            else if (percentage >= 70) gradeComment = '👌 Good!';
            else if (percentage >= 60) gradeComment = '📚 Keep studying!';
            else gradeComment = '💪 More practice needed!';

            document.getElementById('feedback').innerHTML = `
                <h3>${gradeComment}</h3>
                <details>
                    <summary>Click to see detailed feedback</summary>
                    <ul style="text-align: left; margin-top: 10px;">
                        ${feedback.map(item => `<li>${item}</li>`).join('')}
                    </ul>
                </details>
            `;
            
            document.getElementById('results').style.display = 'block';
            document.getElementById('results').scrollIntoView({ behavior: 'smooth' });
        }

        // Add some interactive effects
        document.querySelectorAll('.option').forEach(option => {
            option.addEventListener('click', function() {
                const radio = this.querySelector('input[type="radio"]');
                radio.checked = true;
            });
        });
    </script>
</body>
